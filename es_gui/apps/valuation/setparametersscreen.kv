<SetParametersScreen>:
    param_widget: param_widget
    title: title
    go_button: go_button
    select_data_button: select_data_button

    BoxLayout:
        orientation: 'vertical'
        spacing: 5
        padding: 10

        TitleTextBase:
            id: title
            size_hint_y: 0.05

        BoxLayout:
            orientation: 'vertical'
            padding: 40, 75
            size_hint_y: 0.85

            SetParameterWidget:
                id: param_widget

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.1

            FloatLayout:
                AnchorLayout:
                    anchor_y: 'center'
                    anchor_x: 'left'

                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_x: 0.15
                        padding: 10

                        TileButton:
                            id: select_data_button
                            background_color: C(hex_secondary)
                            text: 'Select data'
                            on_release: root.manager.current = 'load_data'

                AnchorLayout:
                    anchor_y: 'center'
                    anchor_x: 'right'

                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_x: 0.15
                        padding: 10

                        TileButton:
                            id: go_button
                            background_color: C(hex_secondary)
                            text: 'Go!'
                            on_release: root.execute_single_run()

<SetParameterWidget>:
    cols: 3
    row_force_default: True
    row_default_height: self.height/9
    spacing: (125, 50)

<SetParameterRow>:
    cols: 2
    spacing: 5

    name: name
    text_input: text_input

    BodyTextBase:
        id: name
        size_hint_x: 0.80
        text: ''
        color: C(hex_black)
        font_size: stnd_font

    SetParamTextInput:
        id: text_input
        size_hint_x: 0.20
        color: C(hex_black)
        font_size: stnd_font

<SetParamTextInput>:
    size_hint_x: 0.25
    multiline: False
    write_tab: False
    font_size: stnd_font
    input_filter: 'float'
    on_focus: self.select_all() if self.focus else self.cancel_selection() 