<BehindTheMeterHomeScreen>:
    wizard_button: wizard_button
    advanced_button: advanced_button

    GridLayout:
        rows: 1
        padding: 15, 100
        spacing: 100

        BoxLayout:
            orientation: 'vertical'
            spacing: 10

            ValuationHomeTitle:
                text: 'Simulation'
                size_hint_y: 0.1

            GridLayout:
                cols: 1
                spacing: 10

                MenuTileButton:
                    id: wizard_button
                    background_color: C(hex_primary)
                    text: '[font=Modern Pictograms][size=80]B[/size][/font]\nWizard'
                    on_release: root.manager.current = 'valuation_wizard'

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 10

                    MenuTileButton:
                        background_color: C(hex_pms312)
                        text: '[font=Modern Pictograms][size=80]r[/size][/font]\nSingle Run'
                        on_release: root.manager.current = 'load_data'

                    MenuTileButton:
                        id: advanced_button
                        background_color: C(hex_pms137)
                        text: '[font=Modern Pictograms][size=80]u[/size][/font]\nBatch Runs'
                        on_release: root.manager.current = 'batch_run'

        BoxLayout:
            orientation: 'vertical'
            spacing: 10

            ValuationHomeTitle:
                text: 'Analysis'
                size_hint_y: 0.1

            BoxLayout:
                orientation: 'horizontal'
                spacing: 10

                MenuTileButton:
                    background_color: C(hex_secondary)
                    text: '[font=Modern Pictograms][size=80]8[/size][/font]\nResults Viewer'
                    on_release: root.manager.current = 'plot'
